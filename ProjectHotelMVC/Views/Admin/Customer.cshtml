@model List<CustomerViewModel>
@{
    Layout = "_AdminLayout";
}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
    <h3>Клиенты</h3>
</div>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ф.И.О</th>
        <th>Номер телефона</th>
        <th>Номер паспорта</th>
        <th>Колличество заказов</th>
        <th>Удалить</th>
    </tr>
    @foreach (var C in Model)
    {
        <tr>
            <td>@C.ID</td>
            <td>@C.FullName</td>
            <td>@C.PhoneNumber</td>
            <td>@C.PassportID</td>
            <td>@C.BookingInfos.Count</td>
            <td>
                <form method="post" asp-controller="Admin" asp-action="CustomerDelete" onclick="return confirm('Вы действително хотите удалить информацию о клиенте?! @C.ID?!')">
                    <input type="hidden" name="ID" value="@C.ID" />
                    <input type="submit" value="Удалить">
                </form>
            </td>
        </tr>
    }
</table>